<!-- 
4:3 aspect ratio
based on 640x480
-->
<theme>
   <formatVersion>7</formatVersion>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,basic,detailed">
      <!-- System Indicators -->
      <stackpanel name="system-indicators" extra="true">
         <w>0.865625</w><!-- 554 -->
         <separator>10</separator>
      </stackpanel>
      <!-- Images -->
      <image name="textlist-outer-border">
         <path>./_inc/images/4-3/textlist-outer-border.svg</path>
      </image>
      <image name="textlist-inner-border">
         <path>./_inc/images/4-3/textlist-inner-border.svg</path>
      </image>
      <image name="textlist-background">
         <path>./_inc/images/4-3/textlist-background.svg</path>
      </image>
      <image name="textlist-background-lines">
         <path>./_inc/images/4-3/textlist-background-lines.svg</path>
      </image>
      <image name="viewname-border">
         <path>./_inc/images/4-3/viewname-border.svg</path>
      </image>
      <image name="viewname-background">
         <path>./_inc/images/4-3/viewname-background.svg</path>
      </image>
      <image name="helpsystem-outer-border">
         <path>./_inc/images/4-3/helpsystem-outer-border.svg</path>
      </image>
      <image name="helpsystem-inner-border">
         <path>./_inc/images/4-3/helpsystem-inner-border.svg</path>
      </image>
      <image name="helpsystem-background">
         <path>./_inc/images/4-3/helpsystem-background.svg</path>
      </image>
      <!-- Text -->
      <text name="viewname" extra="true">
         <x>0.1375</x><!-- 88 -->
      </text>
      <!-- Help -->
      <helpsystem name="help">
         <fontSize>0.01666667</fontSize><!-- 8 -->
      </helpsystem>
   </view>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <textlist name="textlist">
         <x>0.0625</x><!-- 40 -->
         <w>0.875</w><!-- 560 -->
      </textlist>
   </view>

   <!--
   ///
   Gamelist View
   ///
   -->
   <view name="basic,detailed">
      <textlist name="gamelist">
         <x>0.0625</x><!-- 40 -->
         <w>0.875</w><!-- 560 -->
      </textlist>
   </view>

   <!--
   ///
   View: Gamelist (Game Artwork: Image, Boxart, Logo)
   ///
   -->
   <view name="detailed" ifSubset="gamelist-view-artwork:image|boxart|logo">
      <textlist name="gamelist">
         <w>0.446875</w><!-- 286 -->
      </textlist>
      <image name="game-art-background" extra="true">
         <pos>0.7234375 0.48125</pos><!-- 463 231 -->
         <size>0.428125 0.52916667</size><!-- 274 254 -->
      </image>
      <image name="game-artwork" extra="true">
         <pos>0.7390625 0.48125</pos><!-- 473 231 -->
         <maxSize>0.365625 0.52916667</maxSize><!-- 234 254 -->
      </image>
      <video name="game-video" extra="true">
         <pos>0.7390625 0.48125</pos><!-- 473 231 -->
         <minSize>0.365625 0.52916667</minSize><!-- 234 254 -->>
      </video>
   </view>

</theme>